{
  "compilerOptions": {
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "strictNullChecks": true,
      "target": "esnext",
      "moduleResolution": "nodenext",
      "module": "nodenext",
      "declaration": true,
      "isolatedModules": true,
      "noEmit": true,
      "outDir": "dist"
  },
  "include": ["./src/"],
  "exclude": ["./node_modules/"]
}